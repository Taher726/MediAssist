<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#6672FF" />

    <!-- Background color (semi-transparent) -->
    <solid android:color="#206672FF" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>