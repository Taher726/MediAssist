<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0FC"
    android:fitsSystemWindows="true"
    tools:context=".ui.medication.MedicationsActivity">

    <!-- Top App Bar - Made simpler to match screenshot -->
    <TextView
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6672FF"
        android:gravity="center"
        android:padding="16dp"
        android:text="Medications"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status bar color needs to be set in styles.xml: -->
    <!-- Add this to your res/values/styles.xml file -->
    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#6672FF</item>
        <item name="android:statusBarColor">#6672FF</item>
    </style>
    -->

    <!-- Or add this to your Activity's onCreate method: -->
    <!--
    // Kotlin:
    window.statusBarColor = ContextCompat.getColor(this, R.color.primaryColor)

    // Java:
    getWindow().setStatusBarColor(ContextCompat.getColor(this, R.color.primaryColor));
    -->

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Bar - Updated with border radius -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_bar_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_search"
                    android:layout_marginEnd="8dp"
                    app:tint="#888888" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Search medications here..."
                    android:textSize="14sp"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Medications"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="8dp" />

            <!-- First Medication Card - Fixed delete icon positioning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/medIcon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/med1"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OBH Combi"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2x/day"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <!-- Status indicator now to the left of delete icon -->
                        <TextView
                            android:id="@+id/statusIndicator1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="#6672FF"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/pill_label_background" />

                        <!-- Delete Icon moved to be part of the horizontal layout -->
                        <ImageView
                            android:id="@+id/deleteIcon1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/delete_icon"
                            android:padding="4dp"
                            app:tint="#888888" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Medication Card - Fixed delete icon positioning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/medIcon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/med1"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Panadol"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1x/day"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <!-- Status indicator now to the left of delete icon -->
                        <TextView
                            android:id="@+id/statusIndicator2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="#6672FF"
                            android:textSize="12sp"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/pill_label_background" />

                        <!-- Delete Icon moved to be part of the horizontal layout -->
                        <ImageView
                            android:id="@+id/deleteIcon2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/delete_icon"
                            android:padding="4dp"
                            app:tint="#888888" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- FAB - Positioned to match screenshot -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMedicationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:tint="@android:color/white"
        android:backgroundTint="#6672FF"
        app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <!-- Bottom Navigation Bar -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

                <ImageView android:id="@+id/homeIcon" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" android:src="@drawable/home" />
                <ImageView android:id="@+id/medicationIcon" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" android:src="@drawable/stethoscope" />
                <ImageView android:id="@+id/renderVousIcon" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" android:src="@drawable/appointment" />
                <ImageView android:id="@+id/ordannanceIcon" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" android:src="@drawable/prescription_black" />
                <ImageView android:id="@+id/profileIcon" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1" android:src="@drawable/useravatar" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>