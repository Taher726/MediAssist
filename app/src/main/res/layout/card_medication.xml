<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F0F7EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/stethoscope"
            android:layout_marginEnd="12dp"
            android:tint="#4CAF50"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ParacÃ©tamol"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/medicationSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage: 500mg"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/medicationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>